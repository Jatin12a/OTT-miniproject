<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= videodata.title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="../../stylesheeets/videoplay.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <h2><%= videodata.title %></h2>

    
    <% if (videodata.video.length > 0) { %>
      <section>
          <div class="cont">
              <div class="video_player">
                  <video preload="metadata" class="main-video">
                      <source src="<%= videodata.video[0] %>" size="1080" type="video/mp4">
                  </video>
              </div>
          </div>
      </section>
      <script src="../../javascript/videoplay.js"></script>
  
     
      <section>
          <div class="container">
            <h1>More Episode</h1>
              <div class="row">
                  <% for (let i = 1; i < videodata.video.length; i++) { %>
                      <div class="col-md-3">
                          <div class="card">
                              <div class="card-body">
                                  <h5 class="card-title">Episode <%= i + 1 %></h5>
                                  <p class="card-text">Description of the episode goes here.</p>
                                  
                                  <a href="#" class="btn btn-primary">Watch Now</a>
                              </div>
                          </div>
                      </div>
                  <% } %>
              </div>
          </div>
      </section>
  <% } %>
  




    <%- include('../partials/footer')  %>
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
   
</body>
</html>
