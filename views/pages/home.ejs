<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WatchNET</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../../stylesheeets/main.css">
</head>
<body>
    <%- include('../partials/navbar') %>
   <main class="main">
    <header>
        <div class="bannerimg">
    
        </div>
        <div class="center">
            <h1>WatchNET</h1>
            <p>Here you can Watch what you like.</p>    
        </div>
    </header>
    <div class="Movielist">
        
<div class="container">
    <div class="row">
        <% moviedata.forEach(function(data){ %>
            <div class="col-md-4">
                <div class="movie-card">
                    <img src="<%= data.poster %>" alt="Movie Image">
                    <div class="overlay">
                        <h3><%- data.title %></h3>
                        <p> <%= data.release_year %></p>
                        <a href="/home/<%= data._id %>" class="watch-btn">Watch</a>
                        <form action="/like/<%= data._id %>" method="POST">
                            <button type="submit">Like</button>
                        </form>
                       
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <div class="next-btn  text-center mt-3 pb-3">
        <% if (currentPage > 1) { %>
            <a href="/home?page=<%= currentPage - 1 %>" class="btn btn-primary">Previous Page</a>
        <% } %>
        <% if (hasNextPage) { %>
            <a href="/home?page=<%= currentPage + 1 %>" class="btn btn-primary">Next Page</a>
        <% } %>
    </div>
</div>

           
    </div>
   </main>


    <%- include('../partials/footer')  %>
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

