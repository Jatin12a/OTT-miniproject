<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../../stylesheeets/main.css">
</head>

<body>
    <%- include('../partials/navbar') %>
    <h1>Favorite</h1>
    <div class="row">
        <% likes.forEach(function(data){ %>
            <div class="col-md-4">
                <div class="movie-card">
                    <img src="<%= data.poster %>" alt="Movie Image">
                    <div class="overlay">
                        <h3><%- data.title %></h3>
                        <p> <%= data.release_year %></p>
                        <a href="/home/<%= data._id %>" class="watch-btn">Watch</a>
                        <form action="/Unlike/<%= data._id %>" method="POST">
                            <button type="submit">Unlike</button>
                        </form>
                       
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <%- include('../partials/footer')  %>
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
