<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">
   
    <link rel="stylesheet" href="../../stylesheeets/movie.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <header>
        <div class="movie-section">
            <div class="image">
                <img src="<%= movie.poster  %>" alt="">
            </div>
            <div class="movie-data">
                <h1><%= movie.title  %></h1>
                <p><%= movie.description  %></p>
                <h3>Year: <%= movie.release_year %></h3>
                <h3>Director: <%= movie.director_name %></h3>
                <h3>Main Lead: <%= movie.main_lead_name %></h3>
                <h3>Genres: <%= movie.genre.join(', ') %></h3>
                <a class="watch-btn" href="/movie/video/<%= movie._id  %>">Watch</a>
                
            </div>
        </div>
        
    </header>
    <div class="recom">
        <h2>Recommended</h2>
        <div class="recommended-movies">
            <% recommendedMovies.forEach(function(movie) { %>
                <div class="movie-card">
                    <img src="<%= movie.poster %>" alt="Movie Image">
                    <div class="overlay">
                        <h3><%- movie.title %></h3>
                        <p><%= movie.release_year %></p>
                        <a href="/home/<%= movie._id %>" class="watch-btn">Watch</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>






    <%- include('../partials/footer')  %>
    
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>